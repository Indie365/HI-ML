    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run GPU tests in AzureML",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/../hi-ml/run_pytest.py",
            "args": [
                "--mark=gpu",
                "--cluster=pr-gpu",
                "--conda_env=${workspaceFolder}/environment.yml",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Train TcgaCrckImageNetMIL  in AzureML",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/../hi-ml/src/health_ml/runner.py",
            "args": [
                "--model=histopathology.TcgaCrckImageNetMIL",
                "--azureml",
                "--cluster=lite-testing-ds2",
            ],
            "console": "integratedTerminal"
        },
        {
            "name": "Train TcgaCrckImageNetMIL  locally",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/../hi-ml/src/health_ml/runner.py",
            "args": [
                "--model=histopathology.TcgaCrckImageNetMIL",
            ],
            "console": "integratedTerminal"
        },
    ]
}
